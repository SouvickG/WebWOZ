		layout.add(new HTML("<div><strong>Welcome to WebWOZ the web-based Wizard of Oz Prototyping Framework!</strong><br />Please choose one of your existing experiments or create a new one via 'Organise Experiments'.</div>"));
	}

	public VerticalPanel getScreen() {
		return layout;
	}

	public void stopReload() {
		
	}

	public void turnOffComponent() {
		
	}

	public void changeVisibility() {
		
	}

}
