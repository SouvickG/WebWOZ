import com.google.gwt.user.client.ui.Button;
import com.google.gwt.user.client.ui.Label;
import com.google.gwt.user.client.ui.TextArea;
import com.google.gwt.user.client.ui.VerticalPanel;
import com.webwoz.wizard.client.Screen;

public class ExampleScreen01 implements Screen {

	private VerticalPanel standardPanel = new VerticalPanel();
	private Label headingLabel = new Label();
	private TextArea outputText = new TextArea();
	private Button sendButton = new Button("Send >");

	public ExampleScreen01() {
		headingLabel.setText("Standard Screen");
		standardPanel.add(headingLabel);
		standardPanel.add(outputText);
		standardPanel.add(sendButton);
	}

	public VerticalPanel getScreen() {
		return standardPanel;

	}

	public void stopReload() {

	}

	public void turnOffComponent() {

	}

	public void changeVisibility() {

	}

}
